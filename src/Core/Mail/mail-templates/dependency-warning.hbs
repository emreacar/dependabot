<style>
  body {
    background-color: #f5f5f5;
    width: 100%;
  }

  h1 {
    color: #673ab7;
    font-weight: 900;
  }

  .wrapper {
    display: block;
    width: 100%;
    max-width: 600px;
    margin: 20px auto;
    padding: 20px;
    background: #e9e9e9;
    border-radius: 20px;
    box-shadow: 0 0 10px #cfcfcf;
  }

  .text-danger {
    color: red;
  }

  .text-success {
    color: green
  }

  table {
    width: 100%;
  }

  tr td {
    border-bottom: 1px solid #c5c5c5;
    padding: 5px;
  }
</style>

<div class="wrapper">
  {{#if trackerResult.outDatedPackages }}
    <h1>
      Some Packages Are<br />
      OUT OF DATE
    </h1>
    {{ else }}
    <h1>
      Congratulations!<br />
      YOU UP TO DATE
    </h1>
  {{/if}}


  {{#if trackerResult.outDatedPackages }}
    <p>There are outdated packages on <strong>{{ username }}/{{ repository}}</strong></p>

    <table>
      <thead>
        <tr>
          <td>Package Name</td>
          <td>Used Version</td>
          <td>Current Version</td>
        </tr>
      </thead>

      <tbody>
        {{#each trackerResult.outDatedPackages }}
          <tr>
            <td>{{ name  }}</td>
            <td class="text-danger">{{ usedVersion  }}</td>
            <td class="text-success">{{ currentVersion  }}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{/if}}
</div>
